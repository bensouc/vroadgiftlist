<%= turbo_frame_tag event do %>
	<div class="card px-3 rounded-3 mb-3">
		<h1 class="text-shadow-primary"><%= event.name %></h1>
		<div class="event-count">
			<i class="fa-solid fa-people-group"></i>
			<%= event.participants.count %>
			<i class="fa-solid fa-calendar-days ms-1"></i>
			<%= l(event.date)%>
		</div>
    <div data-controller="sharing-link"
         data-sharing-link-url-value="<%= invite_url(event) %>"
         data-sharing-link-title-value="Pour rejoindre <%= event.name %>"
         data-action="click->sharing-link#sharing">
      <i class="fa-solid fa-share-nodes"></i>
    </div>
    <p>OrganisÃ© par: <%= event.organized_by(current_user) %></p>
	</div>
<% end %>
