<%= turbo_frame_tag gift do%>
	<div class="card px-3 py-2 mb-3  overflow-hidden" style= "border-radius:0.5rem; background-image: linear-gradient(to right, rgba(0, 0, 0, 0.0), rgba(0, 0, 0, 0.3)),url('<%= cl_image_path gift.photo.key if gift.photo.attached? %>'); background-size:contain ; background-repeat: no-repeat;background-position: right 0%; height: 100px; ">
		<h3><%= gift.name %>			<%= link_to   gift.url do %>
				<i class="fa-solid fa-link"></i>
			<% end %>
		</h3>
		<p><i class="fa-solid fa-coins text-warning"></i> <%= number_to_currency(gift.price, unit: "â‚¬", separator: ",", delimiter: " ") %></p>
		<p><%= gift.received? ? (I18n.t "gift.purchased") : (I18n.t "gift.not_purchased")%></p>
	</div>
<% end %>
