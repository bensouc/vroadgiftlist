<%= turbo_frame_tag :wishlist do %>
	<div class="main pt-3 px-3">
		<div class='my-3 d-flex align-items-baseline w-100 justify-content-center fs-1 fw-bold gap-2 wishlist-title'>
			<h1 class=""><%= I18n.t "gift.index.title" %></h1>
			<i class="fa-solid fa-share-nodes ms-2"></i>
		</div>
		<% gifts.each do |gift| %>
			<%= render gift %>
		<% end %>
	</div>
	<%= link_to  new_gift_path, class: 'add-central-btn' do %>
		<i class="fa-solid fa-gift fs-1"></i>

	<% end %>
<% end %>
